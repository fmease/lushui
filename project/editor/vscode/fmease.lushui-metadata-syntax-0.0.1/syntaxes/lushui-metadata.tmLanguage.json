{
    "scopeName": "source.lushui-metadata",
    "name": "lushui-metadata",
    "patterns": [
        {
            "include": "#comment"
        },
        {
            "include": "#key"
        },
        {
            "include": "#constant"
        },
        {
            "include": "#text"
        },
        {
            "include": "#punctuation"
        },
        {
            "include": "#number"
        }
    ],
    "repository": {
        "comment": {
            "patterns": [
                {
                    "name": "comment.line.number-sign.lushui-metadata",
                    "match": "#(?: (TEST)((?: @\\w+)+)?(?: ((?:pass|fail) (?:check|build|run)|auxiliary|ignore|(?:compiler|program)-(?:args|env-var)|timeout|substution|revisions))(.*))?.*",
                    "captures": {
                        "1": {
                            "name": "keyword.other.lushui-golden-test"
                        },
                        "2": {
                            "name": "meta.attribute.lushui-golden-test meta.annotation.lushui-golden-test meta.decorator.lushui-golden-test variable.language.lushui-golden-test variable.annotation.lushui-golden-test variable.other.lushui-golden-test"
                        },
                        "3": {
                            "name": "keyword.other.lushui-golden-test"
                        },
                        "4": {
                            "name": "variable.other.lushui-golden-test"
                        }
                    },
                    "__comment__": [
                        "@Task Get rid of the golden test highlighting once it's implemented via semantic highlighting"
                    ]
                }
            ]
        },
        "punctuation": {
            "patterns": [
                {
                    "name": "punctuation.brackets.square.lushui-metadata",
                    "match": "\\["
                },
                {
                    "name": "punctuation.brackets.square.lushui-metadata",
                    "match": "\\]"
                },
                {
                    "name": "punctuation.brackets.curly.lushui-metadata",
                    "match": "\\{"
                },
                {
                    "name": "punctuation.brackets.curly.lushui-metadata",
                    "match": "\\}"
                },
                {
                    "name": "punctuation.comma.lushui-metadata",
                    "match": ","
                },
                {
                    "name": "punctuation.colon.lushui-metadata",
                    "match": ":"
                }
            ]
        },
        "text": {
            "patterns": [
                {
                    "name": "string.quoted.double.lushui-metadata",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "include": "#escape_sequence"
                        }
                    ]
                },
                {
                    "name": "string.unquoted.lushui-metadata",
                    "match": "\\b((?:[a-zA-Z_]\\w*)(?:-[a-zA-Z_]\\w*)*)\\b"
                }
            ]
        },
        "escape_sequence": {
            "name": "constant.character.escape.lushui-metadata",
            "match": "\\\\(u\\{[0-9a-fA-F]+\\}|\\\\|\")"
        },
        "constant": {
            "patterns": [
                {
                    "name": "constant.language.lushui-metadata",
                    "match": "\\b(false|true)\\b"
                }
            ]
        },
        "number": {
            "patterns": [
                {
                    "name": "constant.numeric.integer.decimal.lushui-metadata",
                    "match": "(-|\\b)[0-9]([0-9]|'[0-9])*\\b"
                }
            ]
        },
        "key": {
            "patterns": [
                {
                    "name": "keyword.key.lushui-metadata",
                    "match": "\\b((?:[a-zA-Z_]\\w*)(?:-[a-zA-Z_]\\w*)*)(?=\\s*:)"
                },
                {
                    "name": "keyword.key.lushui-metadata",
                    "match": "\"([^\"])*?\"(?=\\s*:)"
                }
            ]
        }
    }
}
