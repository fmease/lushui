{
    "__comment__": "make underscores part of identifiers and remove number literal suffixes",
    "scopeName": "source.lushui",
    "name": "lushui",
    "patterns": [
        {
            "include": "#comment"
        },
        {
            "include": "#number-literal"
        },
        {
            "include": "#attribute"
        },
        {
            "include": "#punctuation"
        },
        {
            "include": "#keyword"
        },
        {
            "include": "#text-literal"
        },
        {
            "include": "#entity"
        }
    ],
    "repository": {
        "comment": {
            "patterns": [
                {
                    "name": "comment.line.double-semicolon.lushui",
                    "match": ";;.*"
                },
                {
                    "__comment__": "Also works: ;(?!;).*",
                    "name": "comment.block.documentation.lushui",
                    "match": ";.*"
                }
            ]
        },
        "number-literal": {
            "patterns": [
                {
                    "name": "constant.numeric.integer.decimal.lushui",
                    "match": "(-|\\b)[0-9]([0-9]|'[0-9])*(_(N|N32|N64|I|I32|I64))?\\b"
                }
            ]
        },
        "keyword": {
            "patterns": [
                {
                    "match": "(?<![\\w\\-])(in|of|self|super|crate)(?![\\w\\-])",
                    "name": "keyword.other.lushui"
                },
                {
                    "match": "(?<![\\w\\-])(data|use|module|let|record)(?![\\w\\-])",
                    "name": "storage.modifier.lushui"
                },
                {
                    "match": "(?<![\\w\\-])as(?![\\w\\-])",
                    "name": "keyword.operator.lushui"
                },
                {
                    "match": "(?<![\\w\\-])(case|do)(?![\\w\\-])",
                    "name": "keyword.control.lushui"
                },
                {
                    "match": "(?<![\\w\\-])Type(?![\\w\\-])",
                    "name": "storage.type.lushui"
                },
                {
                    "match": "[\\.:+~=<>*^!?|/\\\\&#%$@]|(?<![a-z-A-Z0-9'])-(?![a-z-A-Z])",
                    "name": "keyword.operator.lushui"
                }
            ]
        },
        "punctuation": {
            "__comment__": "@Bug consecutive `-` not highlighted",
            "patterns": [
                {
                    "match": "\\(",
                    "name": "punctuation.grouping.begin.bracket.round.lushui meta.brace.round.lushui"
                },
                {
                    "match": "\\)",
                    "name": "punctuation.grouping.end.bracket.round.lushui meta.brace.round.lushui"
                },
                {
                    "match": "\\[",
                    "name": "punctuation.grouping.begin.bracket.square.lushui meta.brace.square.lushui"
                },
                {
                    "match": "\\]",
                    "name": "punctuation.grouping.end.bracket.square.lushui meta.brace.square.lushui"
                },
                {
                    "match": ",",
                    "name": "punctuation.lushui"
                }
            ]
        },
        "text-literal": {
            "patterns": [
                {
                    "name": "string.quoted.double.lushui",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "include": "#escape_sequence"
                        }
                    ]
                }
            ]
        },
        "escape_sequence": {
            "name": "constant.character.escape.lushui",
            "match": "\\\\(u[0-9a-f]{4}|U[0-9a-f]{6}|\\\\|\")"
        },
        "entity": {
            "patterns": [
                {
                    "__comment__": "Note that we can add a patterns field containing includes. What effect does it have though?",
                    "match": "\\b((?:[a-zA-Z][a-zA-Z0-9]*'*)(?:-[a-zA-Z][a-zA-Z0-9]*'*)*)\\s*(?=[:=][\\w\\s])",
                    "captures": {
                        "1": {
                            "name": "entity.name.function.lushui"
                        }
                    }
                }
            ]
        },
        "attribute": {
            "__comment__": "make the second branch stricter: require the the first part inside the brackets to be a valid identifier",
            "patterns": [
                {
                    "match": "(?<![\\.:+~=<>*^!?|/\\\\&#%$@])@\\s*(?:[a-zA-Z][a-zA-Z0-9]*'*)(?:-[a-zA-Z][a-zA-Z0-9]*'*)*\\b",
                    "name": "meta.attribute.lushui punctuation.definition.variable"
                },
                {
                    "match": "(?<![\\.:+~=<>*^!?|/\\\\&#%$@])@\\s*\\(.+?\\)",
                    "name": "meta.attribute.lushui punctuation.definition.variable"
                }
            ]
        }
    }
}
